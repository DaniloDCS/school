  style. 
    .class-title {
      font-size: 1.5em;
      font-weight: bold;
      margin-bottom: 1em;
      text-align: center;
      padding: 20px;
      border-radius: 5px;
      background-color: #f5f5f5;
    }

    .boxs {
      display: flex;
      justify-content: space-between;
    }

    .box {
      width: 45%;
      padding: 20px;
      border-radius: 5px;
      background-color: #f5f5f5;
    }

    .box input {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin-bottom: 10px;
    }

    .box button {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background-color: #fff;
      cursor: pointer;
    }

    #alert-create-call {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 9999;
    }

    #alert-create-call .running-circle {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    #alert-create-call .running-circle .circle {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      border: 5px solid #fff;
      border-top: 5px solid #000;
      animation: running 1s linear infinite;
    }

    @keyframes running {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }

    #preview-of-me {
      width: 400px;
      height: 300px;
      background-color: #ccc;
      padding: 5px;
      border-radius: 5px;
      margin: 0 auto;
      display: flex;
    }

